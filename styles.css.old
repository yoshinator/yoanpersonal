a, p, div, h1, h2, h3, h4, h5, h6, img {
  margin: 0;
  padding: 0;
  border: 0;
}

.site {
  width: 80%;
  margin: auto;
  margin-top: 5%;
  background-color: seashell;
}

.mast-head{
  background: rgb(16, 37, 134);
  width: 100%;
  border-bottom-right-radius: 100%;

}

.yoan-intro h2, p {
  
  margin-left: 2rem;
  color: #C5A100;
}

.yoan-intro h2 {
  font-family: cursive;
  margin-top: 1.5%;
  font-stretch: ultra-expanded;
  letter-spacing: .2rem;
  font-weight: bold;
  font-size: 2.5rem;
}
.header-image {
  width: 10rem;
  border-radius: 50%;
  margin-top: 3%;
  margin-bottom: 2%;
  margin-left: 45%;

}

.projects-heading {
text-align: center;
margin: 25px 30px 30px;
}

.project {
  display: grid;
  justify-content: center;
  margin-bottom: 30px;
  box-shadow: 10px 10px 8px rgba(197, 161, 0,.3);
  background: rgb(255, 227, 99);
  border-radius: 4%;
  transition: .5s ease;
}

.project:hover {
  transform: scale(1.03);
  padding: 1em;
  box-shadow: 10px 10px 8px rgba(90, 109, 194, .3);
  border-radius: 6%;
  
}
.project p {
  text-align: center;
  color: rgba(16, 37, 134);
  line-height: 1.5em;
  font-size: 1.1em;
}

.project-title {
  margin-top: 15px;
}


.project-details{
  width: 80%;
  margin-top: 15px;
  justify-self: center;
}

.project img {
  justify-self: center;
  width: 20rem;
  border-radius: 5%;
}



a {
  text-decoration: none;
  color: #102586;
  cursor: pointer;
  font-stretch: expanded;
  font-weight: bold;
  font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif
}

a.visited {
  color: #102586;
  cursor: pointer;
}

